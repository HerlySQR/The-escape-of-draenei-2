public class HeroType
    static constant int MAX = 23
    static boolean level
    static Table valuesN
    static Table valuesL
    static string array roots

    static function get(unit u) returns int
        if level
            return valuesL.loadInt(u.getTypeId())
        else
            return valuesN.loadInt(u.getTypeId())

init
    HeroType.valuesN = new Table()
    HeroType.valuesL = new Table()

    for i = 1 to 23
        HeroType.valuesN.saveInt(N_HEROS[i], i)
        HeroType.valuesL.saveInt(L_HEROS[i], i)
    
    HeroType.roots[1] = Icons.bTNDemolisher
